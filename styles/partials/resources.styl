.resources
	margin 0 
	padding 0
	list-style-type none
	li
		margin-bottom -5px
		width 25%
		float left
		position relative
		overflow hidden
		transition transform 0.4s, opacity 0.1s 0.3s
		img
			width 100%
			max-width 100%
		.resource-card
			background rgba(highlight, .85)
			padding	2em
			height 100%
			width 100%
			position absolute
			top auto
			bottom 0
			display flex
			flex-direction column
			align-items center
			justify-content space-around
			opacity 0
			transform translateY(100%)
			transition transform 0.4s, opacity 0.1s 0.3s
			h3
				color off-white
				font-weight: 600
				text-transform uppercase
				font-size 2em
			.resource-btn
				border: 4px solid off-white
				padding .75em 1.55em
				border-radius: .2em;
				color off-white
				text-transform: uppercase
				text-decoration none
				font-weight 600
				font-size 1.2em
				margin-bottom 10px

	li:hover
		img
			transform scale(1.5)
			transition transform 0.4s, opacity 0.1s 0.3s
		.resource-card
			opacity 1
			transform translateY(0%)
			transition transform 0.4s, opacity 0.1s 









@media only screen and (max-width: 1280px)
	.resources
		li
			width 33.33%
			
@media only screen and (max-width: 900px)
	.resources
		li
			width 50%
						
@media only screen and (max-width: 600px)
	.resources
		li
			width 100%